<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FounderActivity"
    android:background="#F6F5F5">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/founder_toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/white_gray_border_tabs">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="-27dp"
                    android:padding="20dp"
                    android:src="@drawable/left_arrow" />

                <TextView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/productsansbold"
                    android:text="Know Founder"
                    android:textColor="#3d3d3d"
                    android:textSize="20sp" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg_founder"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@drawable/know_founder_bg" />


        <RelativeLayout
            android:id="@+id/greenlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:background="@drawable/green_bg"
            android:padding="25dp">


            <TextView
                android:id="@+id/name_founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/productsansbold"
                android:paddingTop="55dp"
                android:text="@string/prof_achyuta_nsamanta"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/name_founder"
                android:layout_marginTop="15dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/productsansregular"
                android:text="@string/founder_details"
                android:textColor="@color/white"
                android:textSize="20sp"/>


        </RelativeLayout>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageFounder"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="-100dp"
            android:src="@drawable/know_founder_pp" />

        <include
            layout="@layout/founder_socials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>
</RelativeLayout>